sst<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".list.detail.DetailAct"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_owner"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="#336699"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/iv_owner"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:textColor="#000"
        android:textSize="18dp"
        tools:text="ktorio"/>

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        android:layout_marginTop="4dp"
        android:textSize="14dp"
        tools:text="organization"/>

    <TextView
        android:id="@+id/tv_star_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_star_count_title"
        app:layout_constraintTop_toBottomOf="@+id/iv_owner"
        app:layout_constraintEnd_toEndOf="@+id/tv_star_count_title"
        android:layout_marginTop="64dp"
        android:textSize="24dp"
        android:textColor="#000"
        android:text="47"/>

    <TextView
        android:id="@+id/tv_star_count_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_star_count"
        app:layout_constraintEnd_toStartOf="@+id/iv_divider"
        android:text="@string/stars"/>

    <ImageView
        android:id="@+id/iv_divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/tv_star_count_title"
        app:layout_constraintTop_toTopOf="@+id/tv_star_count"
        app:layout_constraintEnd_toEndOf="@+id/tv_issue_count_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_star_count_title"
        android:src="#bbbbbb"/>

    <TextView
        android:id="@+id/tv_issue_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_issue_count_title"
        app:layout_constraintTop_toTopOf="@id/tv_star_count"
        app:layout_constraintEnd_toEndOf="@+id/tv_issue_count_title"
        android:textSize="24dp"
        android:textColor="#000"
        android:text="23"/>

    <TextView
        android:id="@+id/tv_issue_count_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/iv_divider"
        app:layout_constraintTop_toBottomOf="@+id/tv_issue_count"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/issues"/>

</androidx.constraintlayout.widget.ConstraintLayout>